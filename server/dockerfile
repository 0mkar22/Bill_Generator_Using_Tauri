# server/Dockerfile

# Use specific node version for stability
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files first to leverage Docker cache
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the server code
COPY . .

# Expose the port your server runs on
EXPOSE 5000

# Start the server
CMD ["npm", "start"]