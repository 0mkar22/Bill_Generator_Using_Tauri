{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.billgenerator.app",
  "productName": "Bill Generator",
  "version": "1.0.0",

  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "frontendDist": "../build",
    "devUrl": "http://localhost:5000"
  },

  "app": {
    "windows": [
      {
        "title": "Invoice Generator",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "category": "Business",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
